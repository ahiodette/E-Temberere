<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/back"
    android:src="@drawable/ingagi"
    android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/u"
        android:text="U"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="85sp"
        android:textStyle="bold"
        android:textColor="@color/inyuguti"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rwanda"
        android:text="RWANDA"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/u"
        android:textSize="85sp"
        android:textStyle="bold"
        android:textColor="@color/inyuguti"
        />

    <EditText
        android:id="@+id/ahantu"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_above="@id/shaka"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="238dp"
        android:hint="Where are you?"
        android:shadowColor="@color/buto"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorHint="@color/inyuguti"
        android:textColorLink="@color/buto"
        android:textCursorDrawable="@drawable/back"
        android:textSize="20sp" />

    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/shaka"
        android:textColor="@color/buto"
        android:background="@color/gusiga"
        android:shadowColor="@color/inyuguti"
        android:text="Search places"
        android:textSize="40sp"/>

</RelativeLayout>