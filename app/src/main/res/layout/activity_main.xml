<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/back"
    android:src="@drawable/travelling"
    android:scaleType="fitXY"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/intro"
        android:text="In which state do you want to travel"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="@color/inyuguti"
        />

    <EditText
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:hint="Enter a state"
        android:textSize="20sp"
        android:background="@color/inyuguti"
        android:textColorLink="#FFFFFF" />

    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/shaka"
        android:textColor="@color/buto"
        android:background="@color/inyuguti"
        android:shadowColor="@color/inyuguti"
        android:text="Let's go!"
        android:textSize="40sp"/>

</RelativeLayout>